# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Markdown files
*.md text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# SQL files
*.sql text eol=lf

# HTML/CSS/JS
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Binary files
*.pt binary
*.pth binary
*.onnx binary
*.mp4 binary
*.avi binary
*.mov binary
*.mkv binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary

